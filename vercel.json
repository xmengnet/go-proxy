{
  "version": 2,
  "builds": [
    {
      "src": "api/index.go",
      "use": "@vercel/go"
    },
    {
      "src": "/public/*",
      "use": "@vercel/static"
  }
  ],
  "rewrites": [
    { "source": "/", "destination": "/public/index.html" },
    { "source": "/(.*)", "destination": "/api/index.go" }
  ]
}
